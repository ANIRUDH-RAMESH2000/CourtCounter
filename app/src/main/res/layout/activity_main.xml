<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#616161"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/team_a_score"
        android:layout_gravity="center_horizontal"
        android:textSize="56sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 pointer"
        android:layout_marginTop="24dp"
        android:onClick="threePointerForA"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 pointer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:onClick="twoPointerForA"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Throw"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:onClick="freeThrowForA"
        />

    </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#616161"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/team_b_score"
                android:layout_gravity="center_horizontal"
                android:textSize="56sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 pointer"
                android:layout_marginTop="24dp"
                android:onClick="threePointerForB"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 pointer"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:onClick="twoPointerForB"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:onClick="freeThrowForB"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Reset"
            android:onClick="resetBothTeams"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>

</LinearLayout>